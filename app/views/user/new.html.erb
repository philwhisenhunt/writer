<h1>Sign up</h1>
<%= form_with(model: @user, local: true) do |f|%>
<p>Name</p>
<%= f.text_field :name %>
<p>Email</p>
<%= f.text_field :email %>
<p>Password</p>
<%= f.text_field :password %>
<p>Password Confirmation</p>
<%= f.text_field :password_confirmation %>
<%= f.submit "Sign up" %>

<% end %>
